{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es6", "es2016.array.include"],
    "strict": true,
    "declaration": true,
    "types": ["lodash", "node", "mocha"],
    "paths": {
      "bitcoinjs-lib/src/*": ["node_modules/bitcoinjs-lib/types/*"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
