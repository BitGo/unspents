{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es6", "es2016.array.include"],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "typeRoots": ["./node_modules/@types/"],
    "strict": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
